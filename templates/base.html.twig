<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block header %}   
          <header>
            <div class="container">
              <nav class="nav">
                <div>
                  <a href="{{ path('app_home') }}">
                    <img src="{{asset("img/download.png")}}" alt="logo">
                  </a>
                </div>
                <div>
                  <a href="{{ path('app_article_index') }}">Article</a>
                  <a href="{{ path('app_commentaire_index') }}">Commentaire</a>
                </div>

                {% if app.user %}
                <ul class="navlist">            
                  <li><p>Bonjour {{ app.user.prenom }} </p></li>
                  <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                </ul>
                {% else %}
                <ul class="navlist">            
                  <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                  <li><a href="{{ path('app_register') }}">S'inscrire</a></li>
                </ul>
                {% endif %}
              </nav>
             </div> 
          </header>
        {% endblock %}

        {% block message %}
          {% for alert in app.flashes('success')%}
          {{alert}}
          {% endfor %}
        {% endblock %}

        {% block body %}
        <div class="container">
            je suis le body de base
        </div>
        {% endblock %}
     
        
        {% block footer %}
        <div class="container">
            je suis le footer
        </div>
        {% endblock %}
    </body>
</html>
